{
    "manifest_version": 2,
    "name": "ScriptCat",
    "version": "0.5.1",
    "description": "脚本猫,一个用户脚本的框架,可编写脚本每天帮你自动处理事务.",
    "background": {
        "page": "background.html"
    },
    "icons": {
        "128": "assets/logo.png"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "default_locale": "zh_CN",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "permissions": [
        "tabs",
        "proxy",
        "cookies",
        "storage",
        "debugger",
        "webRequest",
        "background",
        "<all_urls>",
        "contextMenus",
        "notifications",
        "clipboardWrite",
        "webRequestBlocking"
    ],
    "sandbox": {
        "pages": [
            "sandbox.html"
        ]
    }
}